<html>
<head>
    <meta charset="utf-8">
    <title>Shop</title>
    <link rel="stylesheet" type="text/css" href="/css/Style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/css/fileinput.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>
<body>
    <a href="#" id="topBtn">
        <i class="fas fa-arrow-circle-up"></i>
    </a>
    <div class="header">
        <nav class="nav">
            <div class="logo">
                <h4>BOOK STORE</h4>
            </div>
            <ul class="nav-links">
                <li><a href="/">HOME <i class="fas fa-chevron-down"></i></a></li>
                <li><a href="">MANAGE <i class="fas fa-chevron-down"></i></a>

                    <ul class="child-links">
                        <li><a href="/category">CATEGORY</a></li>
                        <li><a href="/product">PRODUCT</a></li>
                        <li><a href="/promotion">PROMOTION</a></li>
                    </ul>  
                </li>
                <% if(isAuthenticated != true){ %>
                <li><a href="">USER <i class="fas fa-chevron-down"></i></a>
                    <ul class="child-links">
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register">Register</a></li>
                    </ul>
                </li>
                <% } %>
                <% if(isAuthenticated == true){ %>
                <li><a href="">Hi,Tien<i class="fas fa-chevron-down"></i></a>
                    <ul class="child-links">
                        <li><a href="javascript: $('#frmSignout').submit();">Logout</a></li>
                        <li><a href="/auth/profile">Profile</a></li>
                        <li><a href="/order/payment">Payment</a></li>
                    </ul>
                </li>
                <% } %>
            </ul>
            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </div>
    <form method="POST" enctype="multipart/form-data" action="/product/add">
        <div class="card shadow " style="margin-top: 7%; margin: 7% 20%;">
            <h5 class="card-header">
                Add New Product
            </h5>
            <div class="card-body">
                <div class="form-group">
                    <label for="ProName">Product Name:</label>
                    <input type="text" class="form-control" id="ProName" autofocus name="ProName" required>
                </div>
                <div class="form-group">
                    <label for="ProAuthor">Author Name:</label>
                    <input type="text" class="form-control" id="ProAuthor" name="ProAuthor">
                </div>
                <div class="form-group">
                    <label for="ProDescription">Description:</label>
                    <textarea rows="3" type="text" class="form-control" id="ProDescription" name="ProDescription"></textarea>
                </div>
                <div class="form-group">
                    <label for="ProCurrentPrice">Current Price (VND):</label>
                    <input type="number" class="form-control" id="ProCurrentPrice" name="ProCurrentPrice" min="0" required>
                </div>
                <div class="form-group">
                    <label for="ProCat">Category:</label>
                    <select id="ProCat" name="ProCat" class="form-control col-md-6" required>
                        <option value="" selected>None</option>
                        <% for(var i = 0; i < category.length; i++) { %>
                        <option value="<%= category[i].CatId %>"><%= category[i].CatName %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="PublishedDate">Published Date:</label>
                    <input type="text" class="form-control" id="PublishedDate" name="PublishedDate">
                </div>
                <div class="form-group">
                    <label for="ProAmount">Amount:</label>
                    <input type="number" class="form-control" id="ProAmount" name="ProAmount" min="0" required>
                </div>
                <div class="form-group">
                    <label for="ProImg">Image:</label>
                    <input type="file" name="ProImg" accept="image/gif, image/jpeg, image/png">
                </div>

                <a href="/product" class="btn btn-primary">
                    <i class="fas fa-backward"></i>
                    List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check-square"></i>
                    Save
                </button>
            </div>
            
        </div>
    </form>
    <script>
        $(function () {
            $("#PublishedDate").datetimepicker({
                format: 'd/m/Y',
                timepicker: true,
                mark: true
            })
        })    
        $(document).ready(function(){

            $(window).scroll(function(){
                if($(this).scrollTop() > 40) 
                {
                    $("#topBtn").fadeIn();
                }else
                {
                    $("#topBtn").fadeOut();
                }
            });

            $("#topBtn").click(function(){
                $("html,body").animate({scrollTop: 0},800);
            });            
        })
        // $(function () {
        //     $('#ProImg').fileinput({
        //       theme: 'fa',
        //       dropZoneEnabled: false,
        //       allowedFileExtensions: ['png', 'jpg', 'jpeg'],
        //       uploadUrl: '/upload',
        //       uploadAsync: false
        //   })
        // })
    </script>
    <script src="/js/nav.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fa/theme.min.js"></script>
</body>
</html>